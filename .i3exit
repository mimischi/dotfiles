#!/bin/sh
lock() {
    scrot /tmp/lock.png
    mogrify -scale 10% -scale 1000% /tmp/lock.png
    i3lock -u -i /tmp/lock.png
    rm /tmp/lock.png
}
funlock() {
    i3lock -u -p win -i ~/img/i3lock_fun.png
}
case "$1" in
    lock)
        lock
        ;;
    fun)
        funlock
        ;; 
    logout)
        i3-msg exit
        ;;
    suspend)
        systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
